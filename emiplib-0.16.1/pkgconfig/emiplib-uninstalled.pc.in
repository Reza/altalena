# the standard variables don't make sense for an uninstalled copy
prefix=
exec_prefix=
libdir=${pcfiledir}/..
includedir=${pcfiledir}/..

Name: EMIPLIB Uninstalled
Description: EDM Media over IP Library, Not Installed
Version: @VERSION@
Requires:
Libs: ${libdir}/src/libemip.la @MIPLINKLIBS@
Cflags: -I${includedir} -I${includedir}/src -I${includedir}/src/core -I${includedir}/src/util -I${includedir}/src/sessions \
        -I${includedir}/src/components/codec -I${includedir}/src/components/input -I${includedir}/src/components/io \
	-I${includedir}/src/components/mixer -I${includedir}/src/components/output -I${includedir}/src/components/timer \
	-I${includedir}/src/components/transform -I${includedir}/src/components/transmission
